<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_bg"
        android:orientation="horizontal">

        <View
            android:id="@+id/sideView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/colorOrange"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/riwTgl"
                fontPath="font/Lato-Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Jum'at, 18 Juli 2017"
                android:textColor="@color/colorGray"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/bunderan"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/orange_circle"></View>

                <TextView
                    android:id="@+id/riwStatus"
                    fontPath="font/Lato-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="BELUM KERING"
                    android:textColor="@color/colorOrange"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/riwTgl"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/riwTime"
                    fontPath="font/Lato-Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="TIMESTAMP"
                    android:textColor="@color/colorLightGray"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hujanRiwayat"
                    fontPath="font/Lato-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/roun_rect_lightgray"
                    android:gravity="center"
                    android:text="Cuaca: Hujan"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/cahayaRiwayat"
                    fontPath="font/Lato-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/roun_rect_lightgray"
                    android:gravity="center"
                    android:text="Cahaya: Terang"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/lembabRiwayat"
                    fontPath="font/Lato-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/roun_rect_lightgray"
                    android:gravity="center"
                    android:text="Kelembaban: Lembab"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>